@model BL.UnidadEntrega
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

<div class="container">
    <div class="row text-center">
        <h2>Lista de unidades de entrega</h2>
        <a href="@Url.Action("Form","UnidadEntrega")" class="btn btn-success"><i class="fa-solid fa-car"></i> Agregar Unidad</a>
        <hr />
    </div>
</div>
@if (Model.UnidadEntregas != null)
{
    <div class="container">
        <div class="row">
            <table class="table table-hover table-responsive table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Actualizar</th>
                        <th class="text-center">Número de Placa</th>
                        <th class="text-center">Modelo</th>
                        <th class="text-center">Marca</th>
                        <th class="text-center">Año de fabricación</th>
                        <th class="text-center">Estado de la unidad</th>
                        <th class="text-center">Eliminar</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (BL.UnidadEntrega unidadEntrega in Model.UnidadEntregas)
                    {
                        <tr class="text-center">
                            <td><a href="@Url.Action("Form","UnidadEntrega",new {IdUnidad=unidadEntrega.IdUnidad})" class="btn btn-warning"><i class="fa-solid fa-pen-nib"></i></a></td>
                            <td>@unidadEntrega.NumeroPlaca</td>
                            <td>@unidadEntrega.Modelo</td>
                            <td>@unidadEntrega.Marca</td>
                            <td>@unidadEntrega.AnioFabricacion</td>
                            <td>@unidadEntrega.EstatusUnidad.Estatus</td>
                            <td><a href="@Url.Action("Delete","UnidadEntrega",new {IdUnidad=unidadEntrega.IdUnidad})" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a></td>
                        </tr>
                    }
                    </tbody>

            </table>
        </div>
    </div>


}
else
{
    <div class="alert alert-danger" role="alert">
        No se encontraron Unidades registradas.Error:@ViewBag.Message
    </div>
}