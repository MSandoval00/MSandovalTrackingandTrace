@model BL.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Slide Navbar</title> @*slide navbar style.css*@
    <link rel="stylesheet" type="text/css" href="~/Content/Usuario/Usuario.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>

    <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true">

        <div class="signup">
                <form>
                    <h1 style="color:#ffffff; text-align:center;">Registrar Usuario</h1>
                    @Html.HiddenFor(Model => Model.IdUsuario)
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @type = "text", @name = "username-S", @placeholder = "Nombre de Usuario", @required = "" })
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @type = "text", @name = "nombre-S", @placeholder = "Nombre Completo", @required = "" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @name = "email-S", @placeholder = "Correo Electronico", @required = "" })
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @name = "pswd-S", @placeholder = "Contraseña", @required = "" })
                    <button>Crear cuenta</button>
                </form>
        </div>
        <div class="login">
            @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form>
                    <label for="chk" aria-hidden="true">Login</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @name = "email", @placeholder = "Email", @required = "" })
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @name = "pswd", @placeholder = "Password", @required = "" })
                    <button>Iniciar sesión</button>
                </form>
            }
        </div>

    </div>
</body>
</html>